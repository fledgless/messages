{% extends 'base.html.twig' %}

{% block title %}To you{% endblock %}

{% block body %}
    <a class="new-button" href="{{ path('app_messages_new') }}">New</a>
    <h1>To you</h1>
    {% for message in messages %}
        <a href="{{ path('app_messages_show', {'id': message.id}) }}">
            <div class="message-content">
                <h2>{{ message.title }}</h2>
                <p class="date">{{ message.createdAt ? message.createdAt|date('Y-m-d h:m') : '' }}</p>
                <p class="salutations">Dear Muffin,</p>
                <div class="content">{{ message.text }}</div>
            </div>
        </a>
    {% else %}
            <p>Guess Loki got lazy. Or self-conscious.</p>
    {% endfor %}
{% endblock %}
